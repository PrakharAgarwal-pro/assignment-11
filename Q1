#include <iostream>
using namespace std;

int main() {
    int size = 100;
    int* sales = new int[size];
    for(int i=0; i<size; i++){
        sales[i]=i+12;
    }
    int newsize= 200;
    int* newsales = new int[newsize];
    for(int i=0; i<newsize; i++){
        newsales[i]=sales[i];
    }
    for(int i=size; i<newsize; i++){
        newsales[i]=0;
    }
    delete[] sales;
    sales=newsales;
    for(int i=0; i<newsize; i++){
        cout<<sales[i]<<endl;
    }
    delete[] newsales;
    return 0;
}
